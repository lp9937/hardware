<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="mbg/generator.yml"/>
    <context id="Charging-MySqlContext"
             targetRuntime="MyBatis3"
             defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--为模型生成序列化方法-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!--为生成的Java模型创建一个toString方法-->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!--生成mapper.xml文件时覆盖源文件-->
        <!--<plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>-->
        <!--注释生成-->
        <commentGenerator type="com.hardware.common.mbg.CommentGenerator">
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>
        
        <jdbcConnection driverClass="${driver-class-name}"
                        connectionURL="${url}"
                        userId="${username}"
                        password="${password}">
            <!--解决mysql驱动升级到8.0后不生成指定-->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>
        <javaModelGenerator targetPackage="com.hardware.charging.pojo.model"
                            targetProject="charging-pile\src\main\java"/>
        <sqlMapGenerator targetPackage="com.hardware.charging.mapper"
                         targetProject="charging-pile\src\main\resources"/>
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.hardware.charging.mapper"
                             targetProject="charging-pile\src\main\java"/>
        <!--生成全部表，tableName设为%-->
        <table tableName="%">
            <property name="rootClass" value="com.hardware.charging.pojo.model.ModelBase"/>
            <!--<generatedKey column="id" sqlStatement="SELECT REPLACE(UUID(),'-','') UUID FROM DUAL" identity="false"/>-->
            <generatedKey column="id" sqlStatement="JDBC"/>
            <domainObjectRenamingRule searchString="^Hardware" replaceString=""/>
        </table>
    </context>
</generatorConfiguration>